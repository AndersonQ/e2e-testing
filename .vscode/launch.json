{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["run", "-h"]
        },
        {
            "name": "Debug cloning a repository",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["sync", "integrations", "--remote", "elastic:master"]
        },
        {
            "name": "Debug Running Services",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["run", "service", "mysql", "--version", "5.6"]
        },
        {
            "name": "Debug Deploying a Service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["deploy", "mysql", "--version", "5.6asda", "--stack", "metricbeat"]
        },
        {
            "name": "Debug Undeploying a Service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["undeploy", "mysql", "--stack", "metricbeat"]
        },
        {
            "name": "Debug Running Stacks",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cli",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["run", "stack", "metricbeat", "--withServices", "apache:2.2,redis:latest"]
        },
        {
            "name": "Godog Tests",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/metricbeat-tests",
            "env": {
                "GO111MODULE": "on",
                "OP_LOG_LEVEL": "DEBUG",
            },
            "args": ["godog", "-t", "mysql"]
        }
    ]
}
